<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>projet</servlet-name>
        <servlet-class>com.projet.servlet.projet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjouterProduit</servlet-name>
        <servlet-class>org.projet.servlet.AjouterProduit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SupprimerProduit</servlet-name>
        <servlet-class>org.projet.servlet.SupprimerProduit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartController</servlet-name>
        <servlet-class>org.projet.servlet.CartController</servlet-class>
    </servlet>
   
    <servlet-mapping>
        <servlet-name>projet</servlet-name>
        <url-pattern>/projet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjouterProduit</servlet-name>
        <url-pattern>/AjouterProduit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SupprimerProduit</servlet-name>
        <url-pattern>/SupprimerProduit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/CartController</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
